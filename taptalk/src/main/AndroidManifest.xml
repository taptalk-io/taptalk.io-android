<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.taptalk.Taptalk">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="oppo.permission.OPPO_COMPONENT_SAFE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />

    <application
        android:largeHeap="true"
        android:theme="@style/AppTheme">

        <service
            android:name="io.taptalk.TapTalk.Helper.TapTalkEndAppService"
            android:stopWithTask="false" />
        <service
            android:name="io.taptalk.TapTalk.Helper.CustomTabLayout.TAPKeepAliveService"
            android:exported="true" />

        <activity android:name="io.taptalk.TapTalk.View.Activity.TAPLoginActivity" />
        <activity android:name="io.taptalk.TapTalk.Helper.CustomMaterialFilePicker.ui.FilePickerActivity" />
        <activity android:name="io.taptalk.TapTalk.View.Activity.TAPRoomListActivity" />
        <activity android:name="io.taptalk.TapTalk.View.Activity.TAPNewChatActivity" />
        <activity android:name="io.taptalk.TapTalk.View.Activity.TAPBarcodeScannerActivity" />
        <activity android:name="io.taptalk.TapTalk.View.Activity.TAPSearchContactActivity" />
        <activity android:name="io.taptalk.TapTalk.View.Activity.TAPNewContactActivity" />
        <activity android:name="io.taptalk.TapTalk.View.Activity.TAPBlockedListActivity" />
        <activity android:name="io.taptalk.TapTalk.View.Activity.TAPChatProfileActivity" />
        <activity android:name="io.taptalk.TapTalk.View.Activity.TAPGroupMemberProfileActivity" />
        <activity android:name="io.taptalk.TapTalk.View.Activity.TAPImageDetailPreviewActivity" />
        <activity android:name="io.taptalk.TapTalk.View.Activity.TAPForwardPickerActivity" />
        <activity android:name="io.taptalk.TapTalk.View.Activity.TAPRegisterActivity" />
        <activity android:name="io.taptalk.TapTalk.View.Activity.TAPMyAccountActivity" />
        <activity android:name="io.taptalk.TapTalk.View.Activity.TAPCountryListActivity" />
        <activity android:name="io.taptalk.TapTalk.View.Activity.TAPVideoPlayerActivity" />
        <activity android:name="io.taptalk.TapTalk.View.Activity.TAPAddMembersActivity" />
        <activity
            android:name="io.taptalk.TapTalk.View.Activity.TAPMapActivity"
            android:windowSoftInputMode="adjustNothing" />
        <activity
            android:name="io.taptalk.TapTalk.View.Activity.TAPChatActivity"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name="io.taptalk.TapTalk.View.Activity.TAPScanResultActivity"
            android:launchMode="singleTask" />
        <activity
            android:name="io.taptalk.TapTalk.View.Activity.TAPCreateNewGroupActivity"
            android:windowSoftInputMode="adjustNothing" />
        <activity
            android:name="io.taptalk.TapTalk.View.Activity.TAPGroupSubjectActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="io.taptalk.TapTalk.View.Activity.TAPMediaPreviewActivity"
            android:windowSoftInputMode="adjustResize|stateHidden" />
        <activity
            android:name="io.taptalk.TapTalk.View.Activity.TAPWebBrowserActivity"
            android:launchMode="singleTask" />
        <activity
            android:name="io.taptalk.TapTalk.View.Activity.TAPEditGroupActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="io.taptalk.TapTalk.View.Activity.TAPGroupMemberListActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustNothing"/>
    </application>

</manifest>