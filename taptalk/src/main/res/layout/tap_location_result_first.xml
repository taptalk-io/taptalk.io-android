<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/tap_bg_white_top_rounded_10dp"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="10dp"
        android:ellipsize="end"
        android:fontFamily="@font/tap_font_latoregular"
        android:letterSpacing="0.01"
        android:lines="1"
        android:textColor="@color/tap_black_44"
        android:textSize="13sp"
        tools:text="Jalan Kyai Maja No. 25C, Gunung, Kebayoran Lama" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/tap_grey_e4" />

</LinearLayout>