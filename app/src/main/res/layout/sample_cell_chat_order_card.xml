<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/v_card_margin_left"
        android:layout_width="48dp"
        android:layout_height="1dp"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@id/cl_card"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/v_card_margin_right"
        android:layout_width="48dp"
        android:layout_height="1dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/cl_card" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cl_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/tap_bg_location_text_field_inactive"
        app:layout_constraintEnd_toStartOf="@id/v_card_margin_right"
        app:layout_constraintStart_toEndOf="@id/v_card_margin_left">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_button_detail"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@drawable/tap_bg_purply_rounded_2dp_10dp_0dp_0dp_ripple">

            <TextView
                android:id="@+id/tv_order_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:ellipsize="end"
                android:fontFamily="@font/tap_font_pt_root_regular"
                android:letterSpacing="-0.01"
                android:maxLines="1"
                android:textColor="@color/tapWhiteFe"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@id/tv_label_detail"
                app:layout_constraintEnd_toStartOf="@id/tv_label_detail"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="MD-7WNSPAR1" />

            <TextView
                android:id="@+id/tv_label_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/tap_font_pt_root_bold"
                android:letterSpacing="0.15"
                android:text="@string/tap_view_details"
                android:textAllCaps="true"
                android:textColor="@color/tapWhite"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/iv_ic_chevron"
                app:layout_constraintStart_toEndOf="@id/tv_order_id"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_ic_chevron"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:src="@drawable/tap_ic_chevron_white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_product_preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/cl_button_detail">

            <ImageView
                android:id="@+id/iv_product_thumbnail"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="@id/tv_product_qty"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@color/tapColorAccent" />

            <TextView
                android:id="@+id/tv_product_name"
                style="@style/tapProductDetailsLabelStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:maxLines="2"
                android:minLines="2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_product_thumbnail"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit…" />

            <TextView
                android:id="@+id/tv_product_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:ellipsize="end"
                android:fontFamily="@font/tap_font_pt_root_regular"
                android:maxLines="1"
                android:paddingBottom="8dp"
                android:textColor="@color/tapPurply"
                android:textSize="11sp"
                app:layout_constraintEnd_toStartOf="@id/tv_product_qty"
                app:layout_constraintStart_toStartOf="@id/tv_product_name"
                app:layout_constraintTop_toBottomOf="@id/tv_product_name"
                tools:text="Rp 1.930.000" />

            <TextView
                android:id="@+id/tv_product_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/tap_font_pt_root_bold"
                android:gravity="end"
                android:paddingBottom="8dp"
                android:textColor="@color/tapBlack44"
                android:textSize="11sp"
                app:layout_constraintEnd_toEndOf="@id/tv_product_name"
                app:layout_constraintTop_toBottomOf="@id/tv_product_name"
                tools:text="Quantity: 1" />

        </android.support.constraint.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/tapGreyEa"
            app:layout_constraintTop_toTopOf="@+id/cl_button_more_items" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_button_more_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/cl_product_preview">

            <TextView
                android:id="@+id/tv_button_more_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/tapPaleCyan"
                android:fontFamily="@font/tap_font_pt_root_bold"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center_horizontal"
                android:paddingStart="8dp"
                android:paddingTop="6dp"
                android:paddingEnd="8dp"
                android:paddingBottom="6dp"
                android:textColor="@color/tapDarkGreenBlue"
                android:textSize="11sp"
                tools:text="And 2 More Items" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/tapLightBlueGrey"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="bottom"
                android:background="@color/tapLightBlueGrey"
                app:layout_constraintBottom_toBottomOf="parent" />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_date_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/cl_button_more_items">

            <TextView
                android:id="@+id/tv_date_label"
                style="@style/tapProductDetailsLabelStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/tap_order_date"
                app:layout_constraintEnd_toStartOf="@id/v_description_separator"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_time_label"
                style="@style/tapProductDetailsLabelStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/tap_order_time"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/v_description_separator"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_date"
                style="@style/tapProductDescriptionLabelStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="8dp"
                android:paddingBottom="8dp"
                app:layout_constraintEnd_toStartOf="@id/v_description_separator"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_date_label"
                tools:text="Fri 09 Nov 2018" />

            <TextView
                android:id="@+id/tv_time"
                style="@style/tapProductDescriptionLabelStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="8dp"
                android:paddingBottom="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/v_description_separator"
                app:layout_constraintTop_toBottomOf="@id/tv_time_label"
                tools:text="18:30" />

            <View
                android:id="@+id/v_description_separator"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:background="@color/tapGreyEa"
                app:layout_constraintBottom_toBottomOf="@id/tv_date"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/tapGreyEa"
                app:layout_constraintBottom_toBottomOf="@id/tv_date" />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_recipient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/cl_date_time">

            <TextView
                android:id="@+id/tv_recipient_label"
                style="@style/tapProductDetailsLabelStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/tap_recipient"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_recipient_details"
                style="@style/tapProductDescriptionLabelStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="8dp"
                android:paddingBottom="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_recipient_label"
                tools:text="Bernama Badi Sabur\n081297304401\nJalan Kyai Maja No. 25C, Gunung, Kebayoran Baru, RT.12/RW.2, Gunung, Kby. Baru, Kota Jakarta Selatan, Daerah Khusus Ibukota Jakarta 12120" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/tapGreyEa"
                app:layout_constraintBottom_toBottomOf="@id/tv_recipient_details" />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_courier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/cl_recipient">

            <TextView
                android:id="@+id/tv_courier_label"
                style="@style/tapProductDetailsLabelStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/tap_courier"
                app:layout_constraintEnd_toStartOf="@id/iv_courier_logo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_courier_type"
                style="@style/tapProductDescriptionLabelStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toStartOf="@id/iv_courier_logo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_courier_label"
                tools:text="Instant Courier" />

            <TextView
                android:id="@+id/tv_courier_cost"
                style="@style/tapProductDescriptionLabelStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="16dp"
                android:paddingBottom="8dp"
                app:layout_constraintEnd_toStartOf="@id/iv_courier_logo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_courier_type"
                tools:text="Rp 30.000" />

            <ImageView
                android:id="@+id/iv_courier_logo"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginEnd="8dp"
                android:adjustViewBounds="true"
                android:minWidth="24dp"
                app:layout_constraintBottom_toBottomOf="@id/tv_courier_cost"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@color/tapLeafyGreen" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/tapGreyEa"
                app:layout_constraintBottom_toBottomOf="@id/tv_courier_cost" />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/cl_courier">

            <TextView
                android:id="@+id/tv_notes_label"
                style="@style/tapProductDetailsLabelStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/tap_notes"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_notes"
                style="@style/tapProductDescriptionLabelStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="16dp"
                android:maxLines="1"
                android:paddingBottom="8dp"
                app:layout_constraintTop_toBottomOf="@id/tv_notes_label"
                tools:text="Mauris non tempor quam, et lacinia sapien. Mau…" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/tapGreyEa"
                app:layout_constraintBottom_toBottomOf="parent" />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_additional_cost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/tapWhiteF8"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/cl_notes">

            <TextView
                android:id="@+id/tv_additional_cost_label"
                style="@style/tapProductDetailsLabelStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="6dp"
                android:text="@string/tap_additional_cost"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/v_badge_additional_updated"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_marginStart="4dp"
                android:background="@drawable/tap_bg_file_button_right"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_additional_cost_label"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_additional_cost"
                style="@style/tapProductDescriptionLabelStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="8dp"
                android:gravity="end"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/v_badge_additional_updated"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Rp 100.000" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/tapGreyEa"
                app:layout_constraintBottom_toBottomOf="parent" />

            <View
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:background="@color/tapGreyEa"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:background="@color/tapGreyEa"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_discount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/tapWhiteF8"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/cl_additional_cost">

            <TextView
                android:id="@+id/tv_discount_label"
                style="@style/tapProductDetailsLabelStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="6dp"
                android:text="@string/tap_discount"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/v_badge_discount_updated"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_marginStart="4dp"
                android:background="@drawable/tap_bg_file_button_right"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_discount_label"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_discount"
                style="@style/tapProductDescriptionLabelStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="8dp"
                android:gravity="end"
                android:textColor="@color/tapTomato"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/v_badge_discount_updated"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="(Rp 100.000)" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/tapGreyEa"
                app:layout_constraintBottom_toBottomOf="parent" />

            <View
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:background="@color/tapGreyEa"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:background="@color/tapGreyEa"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl_total_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/tapCreamWhite"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/cl_discount">

            <TextView
                android:id="@+id/tv_total_price_label"
                style="@style/tapProductDetailsLabelStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/tap_total_price"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_total_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:gravity="end"
                android:paddingBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_total_price_label"
                tools:text="Rp 3.890.000" />

            <View
                android:id="@+id/v_total_price_separator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/tapGreyEa"
                app:layout_constraintBottom_toBottomOf="parent" />

            <View
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:background="@color/tapGreyEa"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:background="@color/tapGreyEa"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>

        <TextView
            android:id="@+id/tv_order_status"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:fontFamily="@font/tap_font_pt_root_bold"
            android:gravity="center"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="@color/tapTealish"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/cl_total_price"
            tools:text="Active Order" />

        <LinearLayout
            android:id="@+id/ll_order_status_guide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingTop="8dp"
            android:paddingEnd="20dp"
            android:paddingBottom="8dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/tv_order_status">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/tap_font_pt_root_bold"
                android:text="The Expert has marked this order as finished." />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3sp"
                android:text="Please continue to review.\nIf the status is not suitable, you can" />

            <TextView
                android:id="@+id/tv_report_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:padding="3sp"
                android:text="report this order."
                android:textColor="@color/tapTomatoTwo" />

        </LinearLayout>

